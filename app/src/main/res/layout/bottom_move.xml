<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:id="@+id/bottomMove_bottomSheet"
    android:background="#FFFFFF"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_hideable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bottomMove_transferText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이동"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/bottomMove_cancleBtn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="취소"
            android:textSize="10sp"
            android:layout_toLeftOf="@+id/bottomMove_submitBtn"

            />
        <Button
            android:id="@+id/bottomMove_submitBtn"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="완료"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/bottomMove_createFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="새 폴더"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bottomMove_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
